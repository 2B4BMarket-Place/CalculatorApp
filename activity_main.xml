<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="end"
        android:textSize="24sp"
        android:inputType="numberDecimal"
        android:background="#eee"
        android:padding="8dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginTop="16dp">

        <Button android:text="7" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="8" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="9" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="/" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onOperatorClick"/>

        <Button android:text="4" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="5" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="6" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="*" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onOperatorClick"/>

        <Button android:text="1" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="2" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="3" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="-" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onOperatorClick"/>

        <Button android:text="0" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="." android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onDigitClick"/>
        <Button android:text="=" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onEqualClick"/>
        <Button android:text="+" android:layout_columnWeight="1" android:layout_rowWeight="1" android:onClick="onOperatorClick"/>

        <Button android:text="C" android:layout_columnWeight="4" android:layout_rowWeight="1" android:onClick="onClearClick"/>
    </GridLayout>
</LinearLayout>
